{
  "rewrites": [
    {
      "source": "/api/rewrite",
      "destination": "https://promptly-api.vercel.app/api/rewrite"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        }
      ]
    }
  ],
  "buildCommand": "npm run build",
  "ignoreCommand": "cd apps/web && node -e \"console.log(!process.env.VERCEL_ENV || process.env.VERCEL_ENV === 'production' ? '' : 'ABORT_BUILD')\"",
  "outputDirectory": "apps/web/.next",
  "framework": "nextjs"
} 